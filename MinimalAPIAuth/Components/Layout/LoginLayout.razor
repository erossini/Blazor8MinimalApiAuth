@inherits LayoutComponentBase

<div class="container-fluid vh-100">
    <div class="row h-100">
        <div class="col-lg-6 col-xl-8 text-light d-none d-lg-block bg-primary position-relative">
            <div class="ms-4 mt-4 position-relative z-1">
                <h1>My Platform</h1>
                <p>A cool login page that is fully mobile responsive and uses no custom CSS!</p>
            </div>
            <div class="d-flex justify-content-center align-items-center position-absolute overflow-hidden z-0 top-0 vh-100 w-100"><img src="img/rocket.png" /></div>
        </div>
        <div class="col-lg-6 col-xl-4 d-flex justify-content-center align-items-center bg-primary">
